<%= simple_form_for article, html: { class: 'form-horizontal' } do |f| %>
<%= f.input :title %>
<%= f.input :body, as: :text, input_html: { rows: 10 } %>
<div class="form-actions">
  <%= f.button :submit, class: 'btn-primary' %>
  <%= submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" %>
</div>
<% end %>
